<local:DockUserControl x:Class="WpfDialogs.FormBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDialogs"
             mc:Ignorable="d" 
	           MinWidth="400"
	           MinHeight="400"
             CanClose="False"  
             IsDocument="True"
             ShowStrategy="Right"                                    
             Width="400" Height="400"
             d:DesignHeight="450" d:DesignWidth="800">
        <TextBlock x:Name="data">
            <TextBlock.ContextMenu>
                <ContextMenu Name="cm">
                    <MenuItem x:Name="NClear"  Header="Clear"/>
                    <MenuItem x:Name="NFreeze" IsCheckable="True" Header="Freeze"/>
                    <Separator/>
                    <MenuItem x:Name="NClose"  Header="Close window"/>
                </ContextMenu>
            </TextBlock.ContextMenu>
            DATA
        </TextBlock>    
</local:DockUserControl>
                 